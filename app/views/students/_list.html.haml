%table.ui.compact.table#students-list
  %thead
    %tr
      %th ID
      %th= t('students.name')
      %th= t('students.register_number')
      %th= t('students.status')
      %th

  %tbody
    %tr.student-list-item{ ng_repeat: 'student in students_ctrl.displayable_students' }
      %td {{ student.id }}
      %td {{ student.name }}
      %td {{ student.register_number }}
      %td {{ student.status.text }}
      %td
        .ui.basic.mini.buttons
          .ui.icon.action.button{ ng_click: 'students_ctrl.setFormStudent(student)' }
            %i.ui.edit.icon
